#!/usr/bin/env bash

PROMPT="Settings"

NETWORK="Network"
BLUETOOTH="Bluetooth"
PULSEAUDIO="Pulseaudio"
KEYRING="Keyring"
PIAVPN="PIA VPN"

source "$HOME/.config/dmenurc"
CHOSEN=$(echo -e "$NETWORK\n$BLUETOOTH\n$PULSEAUDIO\n$KEYRING\n$PIAVPN" | eval "$DMENU -p \"$PROMPT\"")

case $CHOSEN in
$NETWORK)
    kitty --class="Nmtui" -T="Network Configuration" nmtui &
    ;;
$BLUETOOTH)
    blueman-manager &
    ;;
$PULSEAUDIO)
    pavucontrol &
    ;;
$KEYRING)
    seahorse &
    ;;
$PIAVPN)
    pia-manager &
    ;;
esac
